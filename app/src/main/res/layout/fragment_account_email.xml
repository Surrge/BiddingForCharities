<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:text="@string/account_current_email"
            style="@style/FormLabelStyle"/>

        <TextView
            android:id="@+id/account_current_email"
            style="@style/FormInputStyle" />

        <TextView
            android:text="@string/account_new_email"
            style="@style/FormLabelStyle"/>

        <EditText
            android:id="@+id/account_new_email"
            style="@style/FormInputStyle"
            android:inputType="textEmailAddress"
            android:maxLength="100"/>

        <TextView
            android:text="@string/account_confirm_email"
            style="@style/FormLabelStyle"/>

        <EditText
            android:id="@+id/account_confirm_email"
            style="@style/FormInputStyle"
            android:inputType="textEmailAddress"
            android:maxLength="100"/>

        <TextView
            android:text="@string/account_password"
            style="@style/FormLabelStyle"/>

        <EditText
            android:id="@+id/account_password"
            style="@style/FormInputStyle"
            android:inputType="textPassword"
            android:maxLength="20" />

        <Button
            android:id="@+id/update_email_button"
            style="@style/FormSubmitStyle"
            android:text="@string/update_button" />

    </LinearLayout>

</ScrollView>