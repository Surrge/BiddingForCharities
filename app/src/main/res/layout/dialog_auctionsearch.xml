<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
        android:text="@string/search_title_hint"
            style="@style/FormLabelStyle" />

        <EditText
            android:id="@+id/title_input"
            style="@style/FormInputStyle"
            android:maxLines="3"
            android:inputType="textAutoCorrect"
            android:maxLength="300" />

        <Spinner
            android:id="@+id/category_spinner"
            style="@style/FormSpinnerStyle" />

        <Spinner
            android:id="@+id/page_spinner"
            style="@style/FormSpinnerStyle" />

        <Spinner
            android:id="@+id/sort_spinner"
            style="@style/FormSpinnerStyle" />

        <Button
            android:id="@+id/search_form_button"
            style="@style/FormSubmitStyle"
            android:text="@string/search_button" />

        </LinearLayout>

</ScrollView>